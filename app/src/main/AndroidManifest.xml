<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.devcloud.snippets.app">

  <application
      android:allowBackup="true"
      android:icon="@drawable/clock_icon"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">
    <activity
        android:name="org.devcloud.snippets.app.MainActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="org.devcloud.snippets.app.SnippetList"
        android:label="@string/title_activity_snippet_list"
        android:parentActivityName="org.devcloud.snippets.app.MainActivity">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="MainActivity"/>
    </activity>
  </application>
</manifest>